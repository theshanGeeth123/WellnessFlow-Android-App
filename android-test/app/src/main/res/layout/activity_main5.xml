<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="-100dp"
        app:srcCompat="@drawable/shape2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lp_header3_1"
        android:textColor="@color/blue_light"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"

        />

    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        android:background="@color/blue_light1"
        android:layout_gravity="center|top"


        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lp_header3_2"
        android:textColor="@color/blue_light"
        android:textSize="17sp"

        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"

        />

    <ImageView
        android:id="@+id/imageView6"

        android:layout_width="wrap_content"
        android:layout_height="220dp"
        app:srcCompat="@drawable/emoji1"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"

        />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lp_header3_3"
        android:gravity="center"
        android:textColor="@color/blue_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:background="@drawable/moodbtn"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="@string/lp_text"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold|italic"/>


</FrameLayout>